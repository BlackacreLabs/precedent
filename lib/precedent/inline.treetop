module Precedent
  grammar Inline
    rule inline
      (word / space)
      (single_newline? ( word / space))*
      {
        def build
          elements.map(&:build).join
        end
      }
    end

    rule single_newline
      "\n" { def build ; ' ' ; end }
    end

    rule word
      [a-zA-Z\.]+ { def build ; text_value ; end }
    end

    rule space
      ' ' { def build ; ' ' ; end }
    end
  end
end
