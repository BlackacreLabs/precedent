# encoding: UTF-8

module Precedent
  grammar Heading
    rule heading
      hashes:'#'+ ' '+ content:inline
      {
        def build
          {
            :type => :heading,
            # depth is the number of '#'s
            :level => hashes.text_value.length,
            :content => content.build
          }
        end
      }
    end

  end
end
